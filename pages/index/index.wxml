<!-- full screen main picture -->
<view class="test-bg" wx:for="{{listInfo}}"  data-current="{{index}}" wx:key="this" bindtap="changeImg">
    <image hidden='{{curIdx===index}}' src="{{item.imgUrl}}" class="bg-image" mode="aspectFill"></image>
    <image hidden='{{curIdx!==index}}' src="{{item.curUrl}}" class="bg-image" mode="aspectFill"></image>    
  </view>


